#include <stdio.h>
#include <stdlib.h>
#include <string.h>
 
int s = 0;
char q[200];
int k = 0;
int sum (int a)//рекурсия для 4 задания
{
    if (a==0)
    {
        return 0;
    }
    return a%10 + sum(a/10);
}
void chislo (int b)//функция для 3 задания
{
    if (b>0)
    {
        q[k] = b%10;
        b = b/10;
        k++;
        chislo (b);
    }
}
int main ()
{
    //3
    int n;
    char w[200];
    scanf ("%d", &n);
    //itoa (n, q, 10);
    chislo (n);
    for (int i=k-1; i>=0; i--)
        w[i] = q[k-1-i];
    for (int i=0; i<k; i++)
        printf ("%d ", w[i]);
    printf("\n");
    //4
    int x;
    scanf ("%d", &x);
    printf ("%d\n", sum(x));
    return 0;
}
